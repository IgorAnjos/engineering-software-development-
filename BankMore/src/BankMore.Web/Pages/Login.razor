@page "/login"
@using BankMore.Web.Models
@using BankMore.Web.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>Login - BankMore</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Login - BankMore</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@loginRequest" OnValidSubmit="@HandleLogin">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="numeroContaOuCpf" class="form-label">Número da Conta ou CPF</label>
                            <input id="numeroContaOuCpf" 
                                   class="form-control" 
                                   value="@displayValue"
                                   @oninput="OnInputChanged"
                                   placeholder="Digite o número da conta ou CPF" 
                                   maxlength="14" />
                            <small class="form-text text-muted">Digite apenas números. CPF será formatado automaticamente.</small>
                            <ValidationMessage For="@(() => loginRequest.NumeroContaOuCpf)" />
                        </div>

                        <div class="mb-3">
                            <label for="senha" class="form-label">Senha</label>
                            <InputText type="password" id="senha" class="form-control" @bind-Value="loginRequest.Senha" placeholder="Digite sua senha" />
                            <ValidationMessage For="@(() => loginRequest.Senha)" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                }
                                Entrar
                            </button>
                        </div>
                    </EditForm>

                    <hr />

                    <div class="text-center">
                        <p>Não tem uma conta?</p>
                        <button class="btn btn-outline-primary" @onclick="NavigateToCadastro">
                            Criar nova conta
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = false;
    private string displayValue = string.Empty;

    protected override void OnInitialized()
    {
        if (AuthService.IsAuthenticated())
        {
            NavigationManager.NavigateTo("/");
        }
    }

    private void OnInputChanged(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? string.Empty;
        
        // Remove tudo que não é número
        var apenasNumeros = new string(input.Where(char.IsDigit).ToArray());
        
        // Se tiver 11 dígitos, aplica máscara de CPF: XXX.XXX.XXX-XX
        if (apenasNumeros.Length == 11)
        {
            displayValue = $"{apenasNumeros.Substring(0, 3)}.{apenasNumeros.Substring(3, 3)}.{apenasNumeros.Substring(6, 3)}-{apenasNumeros.Substring(9, 2)}";
        }
        else if (apenasNumeros.Length > 11)
        {
            // Limita a 11 dígitos
            apenasNumeros = apenasNumeros.Substring(0, 11);
            displayValue = $"{apenasNumeros.Substring(0, 3)}.{apenasNumeros.Substring(3, 3)}.{apenasNumeros.Substring(6, 3)}-{apenasNumeros.Substring(9, 2)}";
        }
        else
        {
            displayValue = apenasNumeros;
        }
        
        // Armazena apenas os números no modelo
        loginRequest.NumeroContaOuCpf = apenasNumeros;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            Console.WriteLine($"[LOGIN DEBUG] Tentando login com: NumeroOuCpf='{loginRequest.NumeroContaOuCpf}', SenhaLength={loginRequest.Senha?.Length ?? 0}");
            
            var response = await AuthService.LoginAsync(loginRequest);

            if (response != null)
            {
                Console.WriteLine($"[LOGIN DEBUG] Login bem-sucedido! Token recebido.");
                successMessage = "Login realizado com sucesso!";
                await Task.Delay(500);
                NavigationManager.NavigateTo("/");
            }
            else
            {
                Console.WriteLine($"[LOGIN DEBUG] Response é null - credenciais inválidas");
                errorMessage = "Credenciais inválidas. Verifique seus dados e tente novamente.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[LOGIN DEBUG] Exception: {ex.Message}");
            errorMessage = $"Erro ao realizar login: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCadastro()
    {
        NavigationManager.NavigateTo("/cadastro");
    }
}
